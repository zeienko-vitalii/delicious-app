<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="design.nxn.flightbooking.Fragments.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/vertical_divider"
                android:orientation="horizontal"
                android:showDividers="middle">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/berlin"
                        android:scaleType="centerCrop"
                        android:tint="@color/images_filter_color"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/start_shorted_city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="DE"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/start_city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Berlin"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:rotation="345"
                            android:src="@drawable/ic_aeroplane"
                            android:tint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/new_york"
                        android:tint="@color/images_filter_color"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/dest_shorted_city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="USA"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/dest_city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="New York"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:rotation="15"
                            android:src="@drawable/ic_aeroplane"
                            android:tint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_round_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="-5dp"
                    android:rotation="180"
                    android:src="@drawable/ic_left_arrow"
                    android:tint="@color/dark_text" />

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ic_left_arrow"
                    android:tint="@color/dark_text" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_text"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="@color/white"-->
                <!--android:layout_alignParentTop="true"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_view"
            android:background="@color/white">

            <CheckBox
                android:id="@+id/round_trip_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:checked="true"
                android:shadowColor="@color/dark_text"
                android:text="@string/roundtrip"
                android:textColor="@color/dark_text"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_trip_check"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_adult"
                            android:tint="@color/dark_text"/>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(18+)"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/adult_subb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_subb"
                                android:tint="@color/dark_text" />
                        </LinearLayout>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/adult_number_text"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/dark_text"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:id="@+id/adult_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:tint="@color/dark_text" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_child"
                            android:tint="@color/dark_text"/>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(2-18)"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/child_subb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_subb"
                                android:tint="@color/dark_text" />
                        </LinearLayout>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/child_number_text"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/dark_text"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:id="@+id/child_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:tint="@color/dark_text" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_infant"
                            android:tint="@color/dark_text"/>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/myTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0-2)"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/infant_subb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_subb"
                                android:tint="@color/dark_text" />
                        </LinearLayout>

                        <design.nxn.flightbooking.customfonts.MyTextView
                            android:id="@+id/infant_number_text"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/dark_text"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:id="@+id/infant_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_round_button"
                            android:clickable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:tint="@color/dark_text" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <design.nxn.flightbooking.customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/class_container"
                android:text="@string/class_type"
                android:textColor="@color/dark_text"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:id="@+id/class_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">

                        <RadioButton
                            android:id="@+id/economy_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/economy"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">

                        <RadioButton
                            android:id="@+id/premium_economy_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/premium_economy"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">

                        <RadioButton
                            android:id="@+id/business_class_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business_class"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">

                        <RadioButton
                            android:id="@+id/first_class_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_class"
                            android:textColor="@color/dark_text" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
