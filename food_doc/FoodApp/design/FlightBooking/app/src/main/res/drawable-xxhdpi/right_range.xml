<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:right="0dp"
        android:left="5dp"
        android:top="5dp">
        <shape>

            <solid android:color="@color/day_range_middle" />

            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="0dp" />

        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="5dp"
        android:left="5dp"
        android:top="5dp">

        <shape android:shape="oval">
            <solid android:color="@color/day_selected" />
        </shape>
    </item>
</layer-list>